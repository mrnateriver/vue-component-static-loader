{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/esm/runtime",
    "charset": "utf-8",
    "importHelpers": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "pretty": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false
  },
  "include": [
    "src/runtime/decorator.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
