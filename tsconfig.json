{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/esm",
    "charset": "utf-8",
    "importHelpers": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "pretty": true,
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
